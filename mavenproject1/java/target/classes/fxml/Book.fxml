<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="600.0" prefWidth="823.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.bookController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefWidth="823.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="ID">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="id" editable="false" prefHeight="30.0" prefWidth="230.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="Author">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="author" prefHeight="30.0" prefWidth="230.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="bookAdd" mnemonicParsing="false" onAction="#addBookbtn" prefHeight="40.0" prefWidth="98.0" text="Add" />
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefWidth="823.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="Name">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="book" prefHeight="30.0" prefWidth="230.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="Category">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="category" prefHeight="30.0" prefWidth="230.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="bookUpdate" mnemonicParsing="false" onAction="#updateBookBtn" prefHeight="40.0" prefWidth="98.0" text="Update" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefWidth="823.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="Publisher">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="publisher" prefHeight="30.0" prefWidth="230.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="Price">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="price" prefHeight="30.0" prefWidth="230.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="bookRefresh" mnemonicParsing="false" onAction="#loadBook" prefHeight="40.0" prefWidth="98.0" text="Refresh" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="60.0" text="Available" />
                  <TextField fx:id="available" prefHeight="30.0" prefWidth="230.0" />
                  <Button fx:id="bookRemove" mnemonicParsing="false" onAction="#rmv" prefHeight="40.0" prefWidth="98.0" text="Remove">
                     <HBox.margin>
                        <Insets left="320.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="15.0">
               <children>
                  <Label text="Search by" />
                  <RadioButton fx:id="namesearch" mnemonicParsing="false" selected="true" text="Name">
                     <toggleGroup>
                        <ToggleGroup fx:id="searchbar" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="idsearch" mnemonicParsing="false" text="ID" toggleGroup="$searchbar" />
                  <TextField fx:id="bookSearch" prefHeight="25.0" prefWidth="442.0" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#searchBar" prefHeight="40.0" prefWidth="98.0" text="Search" />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="bookTable">
               <columns>
                  <TableColumn fx:id="bookID" prefWidth="41.0" resizable="false" text="ID" />
                  <TableColumn fx:id="bookName" editable="false" prefWidth="273.0" resizable="false" text="Book Name" />
                  <TableColumn fx:id="bookAuthorID" editable="false" prefWidth="108.0" resizable="false" text="Author" />
                  <TableColumn fx:id="bookCategoryID" editable="false" prefWidth="108.0" resizable="false" text="Category" />
                  <TableColumn fx:id="bookPub" editable="false" prefWidth="91.0" resizable="false" text="Publisher" />
                  <TableColumn fx:id="bookQuantity" editable="false" minWidth="0.0" prefWidth="108.0" resizable="false" text="Available" />
                  <TableColumn fx:id="bookPrice" editable="false" minWidth="0.0" prefWidth="93.0" resizable="false" text="Price" />
               </columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
